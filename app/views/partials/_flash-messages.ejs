<%if (typeof flashMsgs !== 'undefined') { %>
    <div class="flash-messages">
        <% flashMsgs.forEach(function(flashMsg) { %>
            <div class="mt-2 alert alert-<%= flashMsg.type %> alert-dismissible fade show mb-2" role="alert">
                <%= flashMsg.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% }); %>
    </div>
<% } %>
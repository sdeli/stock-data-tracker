<!DOCTYPE html>
<html lang="en">

<% include partials %>

<body>
    <% include partials %>
    
    <section class="container main">
        <div class="row">
            <div class="col-12 mt-1 col-lg-8 offset-lg-2">
                <% include partials %>
            </div>

            <div class="col-12 mt-2 col-lg-8 offset-lg-2 mt-4">

            <% formData = templateData.formData %>
            <form method='post' action="<%= formData.changeTmpPwdEp %>" title="categories-list__title">
                <h2 class="mb-4">Please change your password</h2>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" aria-describedby="emailHelp" placeholder="Enter a new passowrd" name="password" value="<%= formData.password %>">
                </div>
        
                <div class="form-group">
                    <label for="passowrd-confirmation">Confirm Your Password</label>
                    <input type="password" name="passwordConf" class="form-control" id="passowrd-confirmation" placeholder="Password" value="<%= formData.password %>">
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </section>

    <% include partials %>
</body>
</html>